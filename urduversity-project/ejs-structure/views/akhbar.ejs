<%- include("partials/header"); -%>
<div class="center-ceontent">
<h1 class="mb-5 text-center" >ادبی اخبار</h1>

<div id="akhbar">
    <% akhbarPosts.reverse().forEach(function(post){ %>
        <div class="composed-post">
            <h2 class="mb-3 mt-3">
                <%= post.title %>
            </h2>
            <p>
                <%= post.content.substring(0, 100) + '...' %>
                    <a href="/akhbar/<%- post.title -%>">read more</a>
            </p>
        </div>
        <% }) %>
</div>

</div>
<%- include("partials/footer"); -%>
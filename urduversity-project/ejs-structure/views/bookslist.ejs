<%- include("partials/header"); -%>
    <div class="center-ceontent">
            <h1 class="mb-5 text-center">فہرست کتب</h1>
            <div id="bookslist">
            <div class="composed-post-list">
                <% booksListPosts.reverse().forEach(function(post){ %>
                <div class="card-list">
                    <h2 class="mb-4">
                        <a class="hrefText" href="/bookslist/<%- post.title -%>">
                            <%= post.title %>
                        </a>
                    </h2>
                    <pre>
                        <%= post.content.substring(0, 100) + '...' %>
                            <a class="hrefText btn btn-read" href="/bookslist/<%- post.title -%>">مزید پڑھیں</a>
                    </pre>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <%- include("partials/footer"); -%>
    